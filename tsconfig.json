{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@utils/*": ["./utils/*"],
      "@/*": ["./*"],
    },
    "module": "ESNext",   
    "target": "ES6",      
    "jsx": "react",
    "esModuleInterop": true,  
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "__mocks__/**/*", "tests/**/*"]
}
